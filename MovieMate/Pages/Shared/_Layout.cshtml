<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" /> <!-- Corrected charset -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieMate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieMate.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar-custom">
            @* Removed navbar-expand-sm as your structure is custom *@
            <div class="navbar-custom-container">
                @* Added a container for better structure *@
                <a asp-area="" asp-page="/Index"> <img class="navimage" src="~/images/MovieMateLogo.png" alt="MovieMateLogo" /> </a>

                <ul class="navbar-nav-custom">
                    @* Changed class for custom styling and structure *@
                    <li class="watchlist-container nav-item-custom">
                        @* Added nav-item-custom for consistency *@
                        <img class="watchlist-icon" src="~/images/WatchlistIcon.png" alt="WatchlistIcon" />
                        <a class="navcolor nav-link" asp-page="/Watchlist/Index">Watchlist</a> @* Corrected asp-page and removed inline style *@
                    </li>
                    <li class="search-container-wrapper nav-item-custom">
                        @* Wrapper for search *@
                        <div class="search-container">
                            <input class="search-bar" type="text" placeholder="Search movies..." /> @* Changed placeholder *@
                            <button class="search-btn" type="submit"><img class="search-img" src="~/images/SearchIcon.png" alt="SearchIcon" /></button>
                        </div>
                    </li>
                </ul>

                <div class="auth-actions-container">
                    @* Container for auth actions *@
                    <partial name="_LoginPartial" /> @* THIS IS THE KEY CHANGE *@
                </div>
            </div>
        </nav>
    </header>
    <div class="container main-content-container">
        @* Added class for potential specific styling *@
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom">
        @* Changed class for custom styling *@
        <div class="container">
            © @DateTime.Now.Year - MovieMate - <a asp-area="" asp-page="/Privacy" class="footer-link">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>